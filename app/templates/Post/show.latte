{block content}
<div class="post">
	<h2 n:inner-block="title"><a href="{link show $post->id}">{$post->title}</a></h2>
	<div>{$post->content|noescape}</div>
	<div class="date">{$post->timestamp|date:'j. n. Y H:i:s'} by <a n:href="profile:show $post->user->id">{$post->user->username}</a>{if $user->isInRole('admin')} · <a n:href="edit $post->id">Upravit</a>{/if}</div>
</div>
