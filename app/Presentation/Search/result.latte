{block content}
<h2 n:inner-block="title">{ifset $query}Hledání {$query}{else}Hledání{/ifset}</h2>
{ifset $query}

{foreach $results as $result}
<a href="{$result->docid}">{$result->title}</a>
<p>{$result->snippet_text|noescape}</p>
{/foreach}

{control paginator}
{else}
<p>Zadej hledaný výraz.</p>
{/ifset}
